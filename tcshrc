source "$HOME/.tcshrc-path"

setenv RUBYOPT rubygems
setenv LC_ALL en_GB.UTF-8
setenv LANG en_GB.UTF-8
setenv MM_CHARSET UTF-8
unset autologout
umask 022

# Skip here onwards if not interactive
if ($?USER == 0 || $?prompt == 0) exit

setenv EDITOR vim
setenv PAGER less
set color
set complete = enhance
bindkey "	" complete-word-fwd
bindkey "" complete-word-back
bindkey -k down history-search-forward
bindkey -k up history-search-backward
set dspmbyte = "utf8"

source "$HOME/.tcshrc-local"

alias ll 'ls -lah'
alias vim 'vim -p'

set nobeep
set fignore=(.o)

set ignoreeof
set notify
set noclobber

set history = 250
set histfile = "$HOME/.history"
set savehist = ( 125 merge )
